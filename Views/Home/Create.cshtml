@model Mvc.Models.Entity.Envio

@{
    ViewData["Title"] = "Create";
    Layout = null;
}


<div class="row">
    <div class="text-center">
        <h3>Registrar nuevo env√≠o</h3>
    </div>

    <div class="col-md-12">
        <form asp-controller="Home" asp-action="Create" method="post">
            <input type="hidden" asp-for="Id"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">

                <div class="form-group">
                    <label asp-for="Codigo" class="control-label">Codigo</label>
                    <input asp-for="Codigo" class="form-control" />
                    <span asp-validation-for="Codigo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Title" class="control-label">Direccion</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Telefono" class="control-label">Telefono</label>
                    <input asp-for="Telefono" class="form-control" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
    
                <div class="form-group">
                    <div class="form-group">
                        <label asp-for="Description" class="control-label">Descripcion</label>
                        <textarea asp-for="Description" class="form-control" rows="3" id="Description"
                            autofocus></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="text-end">
                        <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-save"></i> Crear</button>
                        <button type="button" class="btn btn-sm btn-danger" data-bs-dismiss="modal"><i class="fa fa-cancel"></i>Cancelar</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>